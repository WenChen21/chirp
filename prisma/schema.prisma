datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  content   String   @db.VarChar(255)
  authorId  String   @map("author_id")

  @@index([authorId])
  @@map("posts")
}
